extends basic.jade

mixin capsule(story)
	if !rootPath
		- rootPath = ''
			- fullpath = rootPath + story.path.dir + '/' + story.path.name + '.html'
			a.storytitle(href=fullpath) #{story.title} - #{story.pairing}

block topmatter
	h1= title

block content
	- var list = archive
	- each year in list
		h2= year.year
		p #{year.wordcount} words.
		.container(style="display: flex; flex-flow: row wrap")
			- each month in year.months
				.box(style="flex: 0 1 25%;")
					h3= month.name
					- each story in month.data
						+capsule(story)
						br
			

mixin capsule(story)
	- var taglist = ''
	if story.tags
		- b = story.tags.map(t => t.name)
		- taglist = b.join(', ')
	if !rootPath
		- rootPath = ''
	- fullpath = rootPath + story.path
	if (story.rating === 'mature')
		- label = 'warning'
	else if (story.rating === 'adult')
		- label = 'danger'
	else 
		- label = 'info'
	.panel.panel-default
		.panel-heading
			a(title='#{taglist}' href='#{fullpath}') #{story.title}
			span.pull-right
				= story.pairing
				| &nbsp;
				span.label(class='label-#{label}')= story.rating
		.panel-body
			!= story.summary
			br
			| #{story.wordCount} words; reading time #{story.readingTime}. 
			i= story.published

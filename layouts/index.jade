extends basic.jade

block title
	title= site.title

block topmatter
	.wrapper
		.masthead.masthead(style="background-image: url('img/twelve_clara_header_2.jpg')")

block content
	.wrapper: .container 
		.row: .col-md-4 &nbsp;
		.row
			.col-md-4
				!= contents
				p #{storycount} stories totalling #{wordcount} words.
			.col-md-4
				a.btn.btn-default(href='all.html') All stories &rarr;
				| &nbsp;
				a.btn.btn-info(href='yearlist.html') By year &rarr;

			- var fnames = Object.keys(fandoms)
			- each ftag in fnames
				- var fandom = fandoms[ftag]
				- var tagobj = tags[ftag]
				- var subtitle = ''
				- if (tagobj.length === 1) subtitle = '1 story'; 
				- else subtitle = tagobj.length + ' stories'
				.col-md-4
					.panel.panel-default
						.panel-heading: a(href='tags/#{tagobj.urlSafe}.html'): h4= fandom.title
						.panel-body
							= fandom.description
							| &nbsp;
							i= subtitle

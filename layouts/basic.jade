html(lang='en')
	head
		meta(http-equiv='content-type' content='text/html; charset=utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
		meta(name='author' content='antennapedia')
		meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport')
		meta(name='viewport' content='width=device-width')
		block title
			title= pageTitle
		block links
			link(rel='stylesheet' href='#{rootPath}css/bootstrap.css')
			link(rel='stylesheet' href='#{rootPath}css/antennapedia.css')
			link(rel='stylesheet' type='text/css' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css')
			link(rel='alternate' type='application/rss' href='#{rootPath}rss.xml')
		block banner
			// banner

	body
		block navigation
			include partials/navigation.jade
		block topmatter
			// topmatter
											
		block content
			!= contents
		
		block footer
			// footer

		block scripts
			script(src='#{rootPath}js//bootstrap.min.js')
